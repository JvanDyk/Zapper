{
  "AppSettings": {
    "ConnectionStrings": {
      "LoyaltyDb": "Host=localhost;Port=5432;Database=loyalty_points;Username=postgres;Password=admin"
    },
    "Messaging": {
      "Provider": "DevEmulator"
    },
    "DevEmulator": {
      "PollingIntervalMs": 1000,
      "MaxConcurrency": 5,
      "VisibilityTimeoutSeconds": 30,
      "MaxRetries": 3,
      "BatchSize": 10
    },
    "Aws": {
      "Sqs": {
        "QueueName": "loyalty-points-queue",
        "Region": "af-south-1",
        "MaxNumberOfMessages": 10,
        "WaitTimeSeconds": 20,
        "VisibilityTimeoutSeconds": 30
      }
    },
    "Serilog": {
      "MinimumLevel": {
        "Default": "Information",
        "Override": {
          "Microsoft.EntityFrameworkCore": "Warning"
        }
      }
    },
    "PointsCalculation": {
      "Strategy": "Standard"
    }
  }
}
